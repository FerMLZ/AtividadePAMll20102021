<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TelaLogin"
    android:background="@drawable/degrade">


    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="46dp"
        android:layout_gravity="top|center"
        android:layout_marginTop="90dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="TheZaroApp"
            android:textSize="35dp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:gravity="center_horizontal" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="270dp"
        android:layout_height="32dp"
        android:layout_gravity="center|top"
        android:layout_marginTop="190dp"
        android:layout_marginRight="45dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Faça Aqui Seu Login"
            android:textColor="@color/black"
            android:textSize="25dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="252dp"
        android:layout_height="45dp"
        android:layout_gravity="center|top"
        android:layout_marginTop="260dp">

        <EditText
            android:id="@+id/email1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/borda"
            android:text="  Email"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="252dp"
        android:layout_height="45dp"
        android:layout_gravity="center|top"
        android:layout_marginTop="330dp">

        <EditText
            android:id="@+id/senha1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/borda"
            android:text="  Senha"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="256dp"
        android:layout_height="60dp"
        android:layout_gravity="center|bottom"
        android:layout_marginBottom="270dp">

        <Button
            android:id="@+id/ButtonLogin"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="@color/black"
            android:onClick="onClickButtonLogin"
            android:text="Login"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="256dp"
        android:layout_height="35dp"
        android:layout_gravity="center|bottom"
        android:layout_marginBottom="180dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="------- Ou se preferir -------"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:textSize="17dp"
            android:gravity="center_horizontal" />
    </LinearLayout>



    <LinearLayout
        android:layout_width="96dp"
        android:layout_height="67dp"
        android:layout_gravity="center|bottom"
        android:layout_marginBottom="90dp"
        android:layout_marginRight="60dp"
        android:backgroundTint="@color/black"
        android:background="@drawable/borda">

        <ImageButton
            android:layout_width="49dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginLeft="24dp"
            android:background="@drawable/google"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="96dp"
        android:layout_height="67dp"
        android:layout_gravity="center|bottom"
        android:layout_marginBottom="90dp"
        android:layout_marginLeft="60dp"
        android:backgroundTint="@color/black"
        android:background="@drawable/borda">

        <ImageButton
            android:layout_width="49dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginLeft="24dp"
            android:background="@drawable/facebook"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="270dp"
        android:layout_height="32dp"
        android:layout_gravity="center|bottom"
        android:layout_marginBottom="30dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Se não tiver conta ainda clicke aqui"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:gravity="center"/>

    </LinearLayout>





</FrameLayout>